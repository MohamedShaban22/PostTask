<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_Story"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/miss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="100dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="@id/image_Story"
        app:layout_constraintTop_toTopOf="@id/image_Story"
        >

        <ImageView
            android:id="@+id/Image_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/miss"
            android:scaleType="centerCrop"

            />


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Text_Profile"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/mohamed_aboelftoh"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_Story"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/image_Story"
        android:layout_margin="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>